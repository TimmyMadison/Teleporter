    shared._animationDetection.autoEscape = not shared._animationDetection.autoEscape
    escapeOmniBtn.Text = "Escape Omni: " .. (shared._animationDetection.autoEscape and "On" or "Off")
    escapeOmniBtn.BackgroundColor3 = shared._animationDetection.autoEscape and Color3.fromRGB(120, 80, 80) or Color3.fromRGB(60, 60, 60)
end)

